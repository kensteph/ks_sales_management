<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddFingerPrintActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:gravity="center"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:id="@+id/left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/finger_left1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="50dp"
                android:src="@drawable/ic_baseline_fingerprint_24"
                />

            <ImageView
                android:id="@+id/finger_left2"
                android:layout_toRightOf="@+id/finger_left1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_baseline_fingerprint_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/finger_left1"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:text="LEFT FINGERPRINTS" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/finger_right1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="50dp"
                android:src="@drawable/ic_baseline_fingerprint_24" />

            <ImageView
                android:id="@+id/finger_right2"
                android:layout_toRightOf="@+id/finger_right1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_baseline_fingerprint_24" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/finger_right1"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:text="RIGHT FINGERPRINTS" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvStatus"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvError"
                tools:ignore="MissingConstraints" />
            <Button
                android:id="@+id/buttonAddFingerprint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SAVE FINGERPRINTS"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>