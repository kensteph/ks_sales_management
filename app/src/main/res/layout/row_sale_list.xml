<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    android:elevation="3dp"
    app:cardUseCompatPadding="true">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/llSales"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtEmployee"
            android:text="Nom de l'employÃ©"
            android:textSize="14sp"
            android:padding="16dp"
            android:textColor="@color/colorPrimary"
            android:ellipsize="end"
            android:maxLines="1"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnDeleteSale"
            android:backgroundTint="@android:color/transparent"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic__delete_forever_24"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/expandable_layout"
        android:layout_marginLeft="16dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtSaleDate"
            android:text="ID et Date de la transaction "
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#0A0A0B"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtCashier"
            android:text="Nom du Caissier"
            android:textSize="14sp"
            android:layout_alignParentEnd="true"
            android:textColor="#838488"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtDescription"
            android:text="Description de la vente"
            android:layout_below="@id/txtSaleDate"
            android:textSize="14sp"
            android:textColor="#151617"
            />

    </RelativeLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>